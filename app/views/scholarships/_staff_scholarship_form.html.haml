= form_for @scholarship do |f|
  .row
    .input-field.col.s12.m6
      =f.select :person_id,Internship.where(staff_id:current_staff.id).where(status:Internship::ACTIVE).collect {|p| [ p.full_name, p.id ] }
      =f.label :person_id, 'Practicante'
    .input-field.col.s12.m3
      =text_field_tag 'scholarship[internship_type]', '',disabled:true
      =label_tag 'scholarship[internship_type]', 'Tipo de servicio', class:'active'
    .input-field.col.s12.m3
      =f.select :scholarship_type_id, ScholarshipType.where(scholarship_category_id:2).order('id DESC').collect {|p| [p.name, p.id]}
      =f.label :scholarship_type_id, 'Monto'

  .row
    .input-field.col.s12.m4
      =f.text_field :start_date, class: "datepicker",placeholder:'Selecciona la fecha de inicio', type:'date'
      =f.label :start_date, 'Fecha de inicio'
    .input-field.col.s12.m4
      =f.text_field :end_date, class: "datepicker",placeholder:'Selecciona la fecha de término', type:'date'
      =f.label :end_date, 'Fecha de término'
    .input-field.col.s12.m4
      =f.select :amount, Scholarship::AMOUNTS.collect {|p| ["$#{p}", p]}
      =f.label :amount, 'Monto'
  .row
    .input-field.col.s12.m12
      =f.hidden_field :person_type, value:'Internship'
      =f.submit 'Guardar', class:'btn-large'

