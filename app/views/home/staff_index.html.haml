.row
  .col.s12.m8
    .card
      .card-content
        .card-title
          Becas
        %table.bordered.highlight.responsive-table
          %thead
            %tr
              %th Tipo de beca
              %th Estudiante
              %th Monto
              %th Estatus
          %tbody
            -@scholarships.each do |scholarship|
              %tr.tr-click{href:"/scholarships/#{scholarship.id}"}
                %td
                  =scholarship.scholarship_type.name
                %td
                  =scholarship.person.full_name
                %td
                  ="$#{scholarship.amount}"
                %td
                  %i.material-icons.left.valign-wrapper{class:status_color(scholarship.status)}
                    lens
                  =scholarship.get_status

.center
  =link_to new_scholarship_path, class:'waves-effect waves-light btn-large blue' do
    %i.material-icons.left
      add
    Solicitar nueva beca