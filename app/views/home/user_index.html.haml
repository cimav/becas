.row
  .col.s12.m12
    .card
      .card-content
        .card-title
          Becas
          -if is_admin?
            %button.btn-floating.right.green.darken-2.tooltipped{'data-tooltip':'Nueva beca','data-delay':40,'data-position':'right',onclick:"openModal($('#new_scholarship_modal'));"}
              %i.material-icons
                add
          -elsif current_user.user_type.eql?User::DEPARTMENT_ASSISTANT
            =link_to new_scholarship_path, class:'btn-floating green darken-2 tooltipped right', 'data-tooltip':'Solicitar nueva beca','data-position':'right' do
              %i.material-icons.left
                add
        -if @scholarships.where(status:Scholarship::REQUESTED).size > 0
          %span.new.badge.orange{"data-badge-caption" => "solicitudes"}
            =@scholarships.where(status:Scholarship::REQUESTED).size
        -if @scholarships.size > 0
          .row
            .col.l4.input-field
              %input#scholarships-search{:required => "", :type => "search", placeholder:'Buscar'}
          %table#scholarships-table.bordered.highlight.responsive-table
            %thead
              %tr
                %th Tipo de beca
                %th Estudiante
                %th Monto
                %th Estatus
            %tbody
              -@scholarships.each do |scholarship|
                %tr.tr-click{href:"/scholarships/#{scholarship.id}"}
                  %td
                    =scholarship.scholarship_type.name
                  %td
                    =scholarship.person.full_name
                  %td
                    =number_to_currency(scholarship.amount,unit: "$", separator: ".", delimiter: ",", format: "%u%n")
                  %td
                    %i.material-icons.left.valign-wrapper{class:status_color(scholarship.status)}
                      lens
                    =scholarship.get_status
        -else
          %blockquote
            Aun no hay becas

#new_scholarship_modal.modal
  .modal-content
    .center
      %h5
        ¿A quién se otorgará la beca?
      .section
        =link_to 'Estudiante',new_scholarship_path(scholarship_person_type:'Student'),class:'btn brown'
        =link_to 'Practicante',new_scholarship_path(scholarship_person_type:'Internship'),class:'btn purple'

:javascript
  $(document).ready(function(){
    $("#scholarships-search").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#scholarships-table tbody tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase()
        .replace( /á/g, 'a' )
        .replace( /é/g, 'e' )
        .replace( /í/g, 'i' )
        .replace( /ó/g, 'o' )
        .replace( /ú/g, 'u' )
        .replace( /ü/g, 'u' )
        .indexOf(value) > -1)
      });
    });
  });